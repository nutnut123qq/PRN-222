@page
@model LoginWith2faModel
@{
    ViewData["Title"] = "Two-factor authentication";
}

<div class="container my-4 align-items-center justify-content-center ">
    <h1 class="text-center" style="font-weight: bold;color:#20B486;">@ViewData["Title"]</h1>
    <hr />
    <p class="text-center">Your login is protected with an authenticator app. Enter your authenticator code below.</p>
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form method="post" asp-route-returnUrl="@Model.ReturnUrl" class="login-2fa">
                <input asp-for="RememberMe" type="hidden" />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.TwoFactorCode" class="form-control" autocomplete="off" />
                    <label asp-for="Input.TwoFactorCode" class="form-label"></label>
                    <span asp-validation-for="Input.TwoFactorCode" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMachine" class="form-label">
                        <input asp-for="Input.RememberMachine" />
                        @Html.DisplayNameFor(m => m.Input.RememberMachine)
                    </label>
                </div>
                <div>
                    <button type="submit" class="w-100 btn-1">Log in</button>
                </div>
            </form>
        </div>
    </div>
    <p class="text-center mt-3">
        Don't have access to your authenticator device? You can
        <a id="recovery-code-login" asp-page="./LoginWithRecoveryCode" asp-route-returnUrl="@Model.ReturnUrl">log in with a recovery code</a>.
    </p>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}