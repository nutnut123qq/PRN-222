@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-6">
        <p>Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
        <p>
            <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
        </p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post" style="display:inline-block;">
            <button class="btn" style="font-size: 15px;" type="submit">Download</button>
        </form>
        <p style="display:inline-block;">
            <a style="text-decoration:none;font-size:15px;" id="delete" asp-page="DeletePersonalData" class="btn btn-red">Delete</a>
        </p>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
