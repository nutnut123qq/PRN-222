@page
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = "Recovery code verification";
}

<div class="container my-4 align-items-center justify-content-center ">
    <h1 class="text-center" style="font-weight: bold;color:#20B486;">@ViewData["Title"]</h1>
    <hr />
    <p class="text-center">
        You have requested to log in with a recovery code.<br /> This login will not be remembered until you provide
        an authenticator app code at log in or disable 2FA and log in again.
    </p>
    <div class="row justify-content-center">
        <div class="col-md-4 recovery">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.RecoveryCode" class="form-control" autocomplete="off" placeholder="RecoveryCode" />
                    <label asp-for="Input.RecoveryCode" class="form-label"></label>
                    <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
                </div>
                <button type="submit" class="w-100 btn-1">Log in</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
